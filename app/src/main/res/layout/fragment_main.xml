<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivityFragment">

    <TextView android:id="@+id/morning_label"
              android:text="@string/morning_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="36sp"
              android:textStyle="bold"
              android:paddingBottom="8dp"/>

    <TextView android:id="@+id/morning_bus_1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="25sp"
              android:paddingBottom="4dp"/>

    <TextView android:id="@+id/morning_bus_2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="25sp"
              android:paddingBottom="20dp"/>

    <TextView android:id="@+id/evening_label"
              android:text="@string/evening_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="36sp"
              android:textStyle="bold"
              android:paddingBottom="8dp"/>

    <TextView android:id="@+id/evening_bus_1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="25sp"
              android:paddingBottom="4dp"/>

    <TextView android:id="@+id/evening_bus_2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="25sp"
              android:paddingBottom="20dp"/>


</LinearLayout>
